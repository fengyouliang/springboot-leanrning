<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="service" class="com.learning.springboot.springcorebeans.part05_aot_and_real_world.methodinjection.ReplaceableGreetingService">
        <replaced-method name="greet" replacer="replacer"/>
    </bean>

    <bean id="replacer" class="com.learning.springboot.springcorebeans.part05_aot_and_real_world.methodinjection.GreetingMethodReplacer"/>

</beans>

